<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="pull-right">
        <% if user_signed_in? %>
          <%= current_user.email %> | <%= link_to 'Sign out', main_app.destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to 'Sign in', main_app.new_user_session_path %>
        <% end %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
